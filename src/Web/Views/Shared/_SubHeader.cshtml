<div id="second-nav" ng-controller="ProjectController" ng-init="init()" class="header clearfix ng-cloak">
    <div class="dropdown pull-left">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Dropdown
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Separated link</a></li>
        </ul>
    </div>
    <h4 class="pull-left crumb bread">
        <a href="#dashboard">Projects</a>
        <i class="fa fa-caret-right"></i>
        <a href="#project/{{project.data.id}}">{{project.data.name}} test</a>
        <i class="fa fa-caret-right"></i>
        <span class="leaf">{{currentPage}}</span>
    </h4>
    <div class="inner-nav pull-right">
        <a ng-class="{'active': currentPage == 'issues'}" href="#/project/{{projectId}}/issues">
            <i class="fa fa-tasks"></i>
            <span>Issues</span>
        </a>
        <a ng-class="{'active': currentPage == 'documents'}" href="#/project/{{projectId}}/documents">
            <i class="fa fa-file-text-o"></i>
            <span>Docs</span>
        </a>
        <a ng-class="{'active': currentPage == 'team'}" href="#/project/{{projectId}}/team">
            <i class="fa fa-users"></i>
            <span>Team</span>
        </a>
        <a ng-class="{'active': currentPage == 'settings'}" href="#/project/{{projectId}}/settings">
            <i class="fa fa-cog"></i>
            <span>Settings</span>
        </a>
    </div>
</div>